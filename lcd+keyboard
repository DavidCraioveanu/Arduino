#include <Wire.h>
#include <Keypad.h>
#include <LiquidCrystal_I2C.h> 
LiquidCrystal_I2C lcd(0x27,16,2); 
char* secretCode = "472";
int pozitia1 = 0;
int pozitia2 = 0;
const byte ROWS = 4;
const byte COLS = 4;
char hexaKeys[ROWS][COLS] = {
  {'1','2','3','A'},
  
  {'4','5','6','B'},

  {'7','8','9','C'},

  {'*','0','#','D'}

};

byte rowPins[ROWS] = {9, 8, 7, 6};

byte colPins[COLS] = {5,4, 3, 2};

Keypad customKeypad = Keypad( makeKeymap(hexaKeys), rowPins, colPins, ROWS, COLS);

void setup(){   
 Serial.begin(9600);
 pinMode(10,OUTPUT);
 lcd.init();
  lcd.backlight();
  digitalWrite(10,0);
  
} 
int i=0;
void loop(){

    char customKey = customKeypad.getKey();

    if(customKey){
        Serial.println(customKey);
        pozitia2++;   
         lcd.setCursor(i++,0);
         lcd.print(customKey); 
         
    } 

     if (customKey){
         
       delay(100);

     } 

       if (customKey == '*' || customKey == '#'){

         pozitia1 = 0;

         pozitia2=0;

       digitalWrite(10, 0);
       lcd.init();
  lcd.backlight();

      } 

         if (customKey == secretCode[pozitia1]){

           pozitia1++;

        }

          if (pozitia1 == 3 && pozitia2 == 3){
                                 

   
    lcd.setCursor(0,0);
    lcd.print("472");
    lcd.setCursor(0,1);
    lcd.print("cod corect");
    digitalWrite(10,1);
          } 

  delay(100);
  if (pozitia1 != 3 && pozitia2 != 3){
                                 

   
    
    lcd.setCursor(0,1);
    lcd.print("cod incorect");
    digitalWrite(10,0);
          } 

  delay(100);
}

